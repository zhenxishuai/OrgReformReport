    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            const tooltipTitleCallback = function(tooltipItems) {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) {
                    return label.join(' ');
                } else {
                    return label;
                }
            };
            
            const defaultTooltipOptions = {
                plugins: {
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                }
            };

            const colors = {
                primary: '#172a4f',
                secondary: '#ffc107',
                green: '#16a34a',
                gray: '#e5e7eb'
            };

            // 1. 舰队构成图 (甜甜圈图)
            if (document.getElementById('fleetChart')) {
                const ctxFleet = document.getElementById('fleetChart').getContext('2d');
                new Chart(ctxFleet, {
                    type: 'doughnut',
                    data: {
                        labels: ['新能源货车 (150+)', '其他车辆 (150+)'],
                        datasets: [{
                            data: [150, 150],
                            backgroundColor: [colors.green, colors.gray],
                            borderColor: '#ffffff',
                            borderWidth: 4,
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        cutout: '70%',
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    font: { size: 14 }
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    title: tooltipTitleCallback
                                }
                            }
                        }
                    }
                });
            }

            // 2. 春节价格对比图 (折线图)
            if (document.getElementById('priceChart')) {
                const ctxPrice = document.getElementById('priceChart').getContext('2d');
                new Chart(ctxPrice, {
                    type: 'line',
                    data: {
                        labels: ['平时', '节前1周', '春节期间', '节后1周', '平时'],
                        datasets: [
                            {
                                label: '市场运费 (波动)',
                                data: [100, 150, 300, 180, 100],
                                borderColor: colors.secondary,
                                backgroundColor: 'rgba(255, 193, 7, 0.1)',
                                fill: true,
                                tension: 0.1,
                                borderWidth: 3,
                                pointRadius: 5
                            },
                            {
                                label: '我们的承诺价 (固定)',
                                data: [100, 100, 100, 100, 100],
                                borderColor: colors.primary,
                                backgroundColor: 'rgba(23, 42, 79, 0.1)',
                                fill: true,
                                tension: 0.1,
                                borderWidth: 3,
                                pointRadius: 5,
                                borderDash: [5, 5]
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return value + '%';
                                    }
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    font: { size: 14 }
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    title: tooltipTitleCallback
                                }
                            }
                        }
                    }
                });
            }
        });

        // Tab 切换逻辑
        function showTab(event, tabID) {
            const tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(tab => {
                tab.classList.remove('active');
            });
            
            const tabButtons = document.querySelectorAll('.tab-btn');
            tabButtons.forEach(btn => {
                btn.classList.remove('active');
            });
            
            document.getElementById(tabID).classList.add('active');
            event.currentTarget.classList.add('active');
        }

        // 导航栏平滑滚动
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
</body>
</html>
